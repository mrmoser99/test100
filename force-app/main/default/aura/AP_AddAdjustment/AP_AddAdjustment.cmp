<aura:component description="Manually Approve Credit App" controller="AP_ManualPayment" 
        implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" access="global">  

     
    <aura:attribute name="processing" type="Boolean" default="false"/>        
    <aura:attribute name="recordId" type="String" access="public"/>
    <aura:attribute name="rowId" type="String" access="public"/>
    <aura:attribute name="fee" type="String" access="public"/>
    <aura:attribute name="isInvalid" type="Boolean" default="false"/>
    <aura:attribute name="isCharge" type="Boolean" default="false"/>
    <aura:attribute name="amountDue" type="decimal" />
 
 
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <lightning:notificationsLibrary aura:id="notifLib"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>  
     
    <lightning:recordEditForm aura:id="createAdjForm" objectApiName="Adjustment__c"   onLoad="{!c.onLoad}">
            
            <lightning:card title="Add Adjustment" iconName="utility:moneybag" >
     
                <lightning:messages /> 
                <aura:if isTrue="{!v.isCharge}">
                    <lightning:inputField  fieldName="Charge__c"  aura:id="chargeLookup"/> 
                  <aura:set attribute="else">
                        <lightning:inputField fieldName="Due_Detail_Line__c" aura:id="dLookup"/>   
                  </aura:set>
                </aura:if>
               
                                
                <lightning:inputField  aura:id="aType" fieldName="Adjustment_Type__c" required="true"/>    
                <lightning:inputField aura:id="credit" fieldName="Credit__c"  required="true" />   
               
               
                <lightning:button class="slds-m-top_large" variant="brand" type="submit" label="Save" onclick="{!c.handleSubmit}" />
                <lightning:button class="slds-m-top_large" label="Cancel" onclick="{!c.handleCancel}"/>
               
            </lightning:card>


    </lightning:recordEditForm>
</aura:component>
